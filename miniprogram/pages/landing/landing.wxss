/* pages/landing/landing.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #ff6b9d 50%, #ffba5a 75%, #ffa8cc 100%);
  background-size: 400% 400%;
  animation: gradientShift 8s ease infinite;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.landing-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 60rpx;
  padding: 60rpx 40rpx;
  width: 90%;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(255, 107, 157, 0.2);
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-bottom: 40rpx;
  display: inline-block;
}

.user-avatar {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--pink), var(--pink-light));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: white;
  box-shadow: 0 20rpx 60rpx rgba(255, 107, 157, 0.2);
  position: relative;
  overflow: hidden;
  margin: 0 auto;
  animation: bounce 2s ease-in-out infinite;
}

.user-avatar::before {
  content: 'üëßüèª';
  font-size: 100rpx;
  position: absolute;
  animation: float 3s ease-in-out infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-10rpx) rotate(2deg); }
}

.sparkle {
  position: absolute;
  color: var(--accent);
  animation: sparkle 2s ease-in-out infinite;
  font-size: 40rpx;
}

.s1 { top: 20%; right: 20%; animation-delay: 0s; }
.s2 { bottom: 20%; left: 15%; animation-delay: 0.5s; }
.s3 { top: 60%; right: 10%; animation-delay: 1s; }

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(0) rotate(0deg); }
  50% { opacity: 1; transform: scale(1) rotate(180deg); }
}

.welcome-text {
  margin-bottom: 40rpx;
}

.h1 {
  font-size: 50rpx;
  font-weight: 700;
  color: var(--pink); /* Fallback */
  margin-bottom: 10rpx;
  background: linear-gradient(135deg, var(--pink), var(--accent));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.subtitle {
  font-size: 32rpx;
  color: var(--text-light);
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.6;
}

.enter-button {
  background: linear-gradient(135deg, var(--pink), var(--pink-light));
  color: white;
  border: none;
  padding: 20rpx 50rpx;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 157, 0.2);
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.enter-button:active {
  transform: translateY(2rpx);
}

.icon {
  margin-right: 10rpx;
}

.feature-icons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  opacity: 0.7;
  width: 100%;
}

.feature-icon {
  font-size: 40rpx;
  color: var(--pink);
  animation: pulse 2s ease-in-out infinite;
}

.feature-icon:nth-child(2) { animation-delay: 0.3s; }
.feature-icon:nth-child(3) { animation-delay: 0.6s; }

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.7; }
  50% { transform: scale(1.1); opacity: 1; }
}

.floating-elements {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
}

.floating-shape {
  position: absolute;
  opacity: 0.1;
  animation: floatAround 20s ease-in-out infinite;
  font-size: 60rpx;
}

.f1 { top: 20%; left: 10%; animation-delay: 0s; color: var(--pink); }
.f2 { top: 60%; right: 15%; animation-delay: 3s; color: var(--accent); }
.f3 { bottom: 30%; left: 20%; animation-delay: 6s; color: var(--pink-light); }

@keyframes floatAround {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  25% { transform: translateY(-40rpx) rotate(90deg); }
  50% { transform: translateY(0px) rotate(180deg); }
  75% { transform: translateY(40rpx) rotate(270deg); }
}

