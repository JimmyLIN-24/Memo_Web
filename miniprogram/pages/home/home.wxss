/* pages/home/home.wxss */
page {
    height: 100vh;
    background-color: #f3f4f6;
    overflow: hidden;
}

.app-container {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Header */
.app-header {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    box-shadow: var(--shadow);
    flex-shrink: 0;
    z-index: 100;
}

.hidden {
    display: none !important;
}

.header-top, .header-middle, .header-bottom {
    padding: 10rpx 30rpx;
}

.header-bottom {
    padding-bottom: 20rpx;
}

.header-left {
    display: flex;
    align-items: center;
}

.user-info {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50rpx;
    padding: 10rpx 20rpx;
}

.user-avatar-small {
    font-size: 40rpx;
    margin-right: 16rpx;
}

.user-details {
    display: flex;
    flex-direction: column;
}

.user-name {
    font-size: 26rpx;
    font-weight: 600;
}

.user-status {
    font-size: 22rpx;
    opacity: 0.8;
}

.status-dot {
    color: #10b981;
    font-size: 20rpx;
    margin-right: 6rpx;
}

.home-btn {
    margin-left: 20rpx;
    font-size: 32rpx;
}

.app-title {
    font-size: 36rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 10rpx;
}

.header-actions {
    display: flex;
    gap: 16rpx;
    overflow-x: auto;
    padding-bottom: 4rpx;
}

.btn {
    padding: 12rpx 24rpx;
    border-radius: 12rpx;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    gap: 8rpx;
    white-space: nowrap;
    border: none;
    line-height: 1.5;
    margin: 0;
}

.btn-primary { background: var(--accent); color: white; }
.btn-coffee { background: linear-gradient(135deg, #cdeec3 0%, #a6d798 100%); color: #1f4023; }
.btn-game { background: linear-gradient(135deg, #ff6b9d, #ffa8cc); color: white; }
.btn-secondary { background: rgba(255, 255, 255, 0.2); color: white; }

/* Layout */
.main-layout {
    flex: 1;
    display: flex;
    overflow: hidden;
}

.sidebar {
    width: 180rpx;
    background: white;
    border-right: 1px solid var(--gray-200);
    height: 100%;
}

.sidebar-nav {
    padding: 20rpx 0;
}

.nav-section {
    margin-bottom: 30rpx;
}

.nav-title {
    font-size: 22rpx;
    color: var(--gray-500);
    padding: 0 20rpx;
    margin-bottom: 10rpx;
}

.nav-btn {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--text-secondary);
    font-size: 24rpx;
}

.nav-btn.active {
    background: var(--gray-100);
    color: var(--primary);
    border-right: 4rpx solid var(--primary);
}

.nav-icon-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6rpx;
}

.icon {
    font-size: 32rpx;
}

/* Summary Button Special */
.nav-summary-btn {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white !important;
    margin: 10rpx;
    border-radius: 16rpx;
    padding: 20rpx 10rpx;
}

/* FIX: Ensure text is visible when active */
.nav-summary-btn.active {
    background: white !important; /* Invert background */
    color: var(--primary) !important; /* Text becomes primary color */
    border: 2px solid var(--primary); /* Add border for visibility */
    box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.summary-stats {
    display: flex;
    width: 100%;
    margin-top: 10rpx;
    gap: 10rpx;
}

.summary-stat {
    flex: 1;
    background: rgba(255,255,255,0.2);
    border-radius: 8rpx;
    padding: 6rpx;
}

/* Adjust active state stats background for contrast */
.nav-summary-btn.active .summary-stat {
    background: var(--gray-100);
    color: var(--text-primary);
}

.summary-value {
    font-weight: bold;
    font-size: 28rpx;
    display: block;
}
.summary-label {
    font-size: 18rpx;
    opacity: 0.9;
    display: block;
}

/* Main Content */
.main-content {
    flex: 1;
    padding: 20rpx;
    background: var(--gray-50);
}

.category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.h2 {
    font-size: 36rpx;
    font-weight: bold;
    color: var(--text-primary);
}

.category-stats {
    display: flex;
    gap: 20rpx;
    font-size: 24rpx;
    color: var(--text-secondary);
}

.stat-item.alert { color: var(--error); }

/* Search */
.search-container {
    margin-bottom: 20rpx;
}

.search-input-wrapper {
    position: relative;
    background: white;
    border-radius: 16rpx;
    border: 1px solid var(--gray-200);
    padding: 16rpx 20rpx 16rpx 70rpx;
}

.search-icon {
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    color: var(--gray-500);
}

.search-clear {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 10rpx;
    color: var(--gray-500);
    z-index: 10;
}

/* Items Grid */
.items-grid {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    padding-bottom: 100rpx;
}

.item-card {
    background: white;
    padding: 24rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
    position: relative;
    border: 1px solid transparent;
}

.item-card.warning { border-color: var(--warning); background: #fffdf5; }
.item-card.alert { border-color: var(--error); background: #fef2f2; }

.item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
}

.item-name {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-primary);
}

.status-badge {
    position: absolute;
    top: 0;
    right: 0;
    padding: 4rpx 12rpx;
    font-size: 20rpx;
    border-bottom-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    color: white;
    background: var(--gray-700);
}
.status-badge.low-stock { background: var(--error); }
.status-badge.expiring { background: var(--warning); }

.item-details {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.item-detail {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: var(--text-secondary);
}

.detail-left {
    display: flex;
    gap: 10rpx;
    align-items: center;
}

.quantity-controls {
    display: flex;
    gap: 16rpx;
}

.quantity-btn {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    background: var(--gray-100);
    color: var(--text-primary);
}

.quantity-btn.decrease { background: #fee2e2; color: #ef4444; }
.quantity-btn.increase { background: #d1fae5; color: #10b981; }

.item-actions {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    display: flex;
    gap: 16rpx;
    background: rgba(255,255,255,0.9);
    padding: 8rpx;
    border-radius: 12rpx;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
}

.item-actions.mobile-visible {
    opacity: 1;
    pointer-events: auto;
}

.action-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}
.action-btn.edit { background: var(--primary); color: white; }
.action-btn.delete { background: var(--error); color: white; }

/* Styles for Add Item Form & Modal (Specific overrides) */
.modal-header-actions {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.form-group { margin-bottom: 30rpx; }
.form-row { display: flex; gap: 20rpx; }
.form-row .form-group { flex: 1; }

.label {
    display: block;
    margin-bottom: 12rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: var(--text-primary);
}

/* Fix Input Styles & Box Sizing */
.input, .picker {
    width: 100%;
    height: 88rpx;
    border: 2rpx solid var(--gray-300);
    border-radius: 16rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    box-sizing: border-box; /* Crucial fix for overflow */
    display: flex;
    align-items: center;
    transition: all 0.2s;
    background: var(--gray-50);
}

.input:focus {
    border-color: var(--primary);
    background: white;
    box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.quick-select-section {
    margin-bottom: 40rpx;
}

.h4 {
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    color: var(--text-primary);
}

.quick-select-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
    margin-bottom: 20rpx;
}

.quick-select-item {
    background: white;
    padding: 16rpx 30rpx;
    border-radius: 40rpx;
    font-size: 26rpx;
    border: 2rpx solid var(--gray-200);
    color: var(--text-secondary);
    transition: all 0.2s;
}

.quick-select-item.selected {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.quick-select-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx 0;
    position: relative;
}

.quick-select-divider::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gray-200);
    z-index: 1;
}

.quick-select-divider text {
    background: white;
    padding: 0 20rpx;
    color: var(--gray-500);
    font-size: 24rpx;
    z-index: 2;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 100rpx 20rpx;
    color: var(--text-secondary);
}
.empty-illustration { font-size: 100rpx; margin-bottom: 30rpx; }
